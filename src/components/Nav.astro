---
import Button from "./Button.astro";
---

<nav>
  <a href=""><img src="../assets/YCDK_secondary-logo.svg" alt="LOGO" /></a>
  <Button Text="KONTAKT OS" />
</nav>

<style>
  nav {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    a {
      aspect-ratio: 1/1;
      padding: 0.5rlh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      text-decoration: none;
      color: var(--color_primary-blue);
      font-weight: bold;
      border-radius: 2rlh;
      background-color: var(--color_white);
    }
    a:hover {
      scale: 1.1;
    }
    a:active {
      scale: 1;
      background-color: var(--color_primary-pink);
    }
  }
</style>
