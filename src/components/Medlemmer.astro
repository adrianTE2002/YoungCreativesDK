---
import { Image } from "astro:assets";
import Button from "../components/Button.astro";
const { placeholder, titel, text, buttonText, order } = Astro.props;
---

<section>
  <Image src={placeholder} alt="Bestyrelse medlem" class="placeholder" />
  <div class={order}>
    <h2>{titel}</h2>
    <p>{text}</p>
    <Button buttonText={buttonText} />
  </div>
</section>

<style>
  .placeholder {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    grid-column: 2 / span 1;
    align-items: center;
    margin: 40px 0;
    gap: 5rem;
  }
  section div {
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: flex-start;
  }

  .reversed {
    order: -1;
  }

  @media screen and (width <= 768px) {
    section {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }
    .reversed {
      order: 1;
    }
  }
</style>
